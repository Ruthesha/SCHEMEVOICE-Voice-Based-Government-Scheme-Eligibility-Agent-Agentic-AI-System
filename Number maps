TELUGU_NUMBER_MAP = {
    # Units
    "ఒక": 1,
    "రెండు": 2,
    "మూడు": 3,
    "నాలుగు": 4,
    "ఐదు": 5,
    "ఆరు": 6,
    "ఏడు": 7,
    "ఎనిమిది": 8,
    "తొమ్మిది": 9,

    # Tens
    "పది": 10,
    "ఇరవై": 20,
    "ముప్పై": 30,
    "నలభై": 40,
    "యాభై": 50,
    "అరవై": 60,
    "డెబ్బై": 70,
    "ఎనభై": 80,
    "తొంభై": 90,

    # Multipliers
    "వంద": 100,
    "వేలు": 1000,
    "వేల": 1000,
    "లక్ష": 100000,
    "లక్షలు": 100000
}

ROMAN_TELUGU_NUMBER_MAP = {
    "okati": 1,
    "rendu": 2,
    "moodu": 3,
    "mudu": 3,
    "nalugu": 4,
    "aidu": 5,
    "aidu": 5,
    "aaru": 6,
    "edu": 7,
    "enimidhi": 8,
    "tommidhi": 9,

    "padi": 10,
    "irevae": 20,
    "muppai": 30,
    "nalabai": 40,
    "yabhai": 50,
    "aravai": 60,
    "debbaai": 70,
    "enabhai": 80,
    "tombhai": 90,

    "vandha": 100,
    "vanda": 100,
    "velu": 1000,
    "vela": 1000,
    "laksha": 100000,
    "lakshalu": 100000
}

def words_to_number(text: str) -> Optional[int]:
    text = text.lower()
    total = 0
    current = 0

    combined_map = {}
    combined_map.update(TELUGU_NUMBER_MAP)
    combined_map.update(ROMAN_TELUGU_NUMBER_MAP)

    for word, value in combined_map.items():
        if word in text:
            if value >= 100:
                current = max(1, current) * value
                total += current
                current = 0
            else:
                current += value

    total += current
    return total if total > 0 else None

