SCHEME_NAME_MAP = {
    "వృద్ధాప్య పెన్షన్": "Old Age Pension (వృద్ధాప్య పెన్షన్)",
    "విద్యార్థి స్కాలర్‌షిప్": "Student Scholarship (విద్యార్థి స్కాలర్‌షిప్)",
    "వితంతు పెన్షన్": "Widow Pension (వితంతు పెన్షన్)"
}

def scheme_info_tool(scheme_name: str) -> Optional[Dict]:
    """
    Retrieves detailed information about a specific scheme.
    This is the SECOND TOOL used by the executor.
    """
    info = SCHEME_DB.get(scheme_name)

    if info:
        print(f"[TOOL CALL] scheme_info_tool('{scheme_name}') - SUCCESS")
    else:
        print(f"[TOOL CALL] scheme_info_tool('{scheme_name}') - NOT FOUND")

    return info
